{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"organizeImports": {
		"enabled": true,
		"include": ["src/"]
	},
	"linter": {
		"enabled": true,
		"include": ["src/"],
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true,
				"useKeyWithClickEvents": "off",
				"noBlankTarget": "off"
			},
			"correctness": {
				"recommended": true,
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "off"
			},
			"style": {
				"recommended": true,
				"noArguments": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"include": ["src/"],
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 88
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "es5",
			"semicolons": "always",
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
